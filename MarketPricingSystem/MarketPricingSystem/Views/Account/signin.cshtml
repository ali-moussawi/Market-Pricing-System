@model MarketPricingSystem.ViewModel.signin

@{
    ViewBag.Title = "signin";
}

<div style="margin-top:150px"><span></span> </div>


<div  style="margin-left:25%" >


    @using (Html.BeginForm("Validatesignin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>signin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Gmail, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Gmail, new { @class = "form-control" , type="gmail" })
                @Html.ValidationMessageFor(m => m.Gmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>

                <button type="submit" class="btn btn-primary">login</button>
            </div>
        </div>
    </div>

    }

</div>

<div style="margin-top:200px"><span></span> </div>

