@model MarketPricingSystem.Models.Users
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}



<form method="post" action="/Users/Updatesettings">
    <div class="wrapper bg-white mt-sm-5">
        <h4 class="pb-5 border-bottom">Account settings</h4>

        <div class="py-5">



            <div class="row py-2">
                <div class="col-md-6">
                    <label for="name">Name</label>
                    <input type="text" class="bg-light form-control" id="name" placeholder="@Model.Name" name="name" >
                </div>


                <div class="col-md-6 pt-md-0 pt-3">
                    <label for="phone">Phone number</label>
                    <input type="text" id="phone" class="bg-light form-control" placeholder="@Model.PhoneNumber" name="phone" >
                </div>
            </div>



            <div class="row py-2">
                <div class="col-md-6">
                    <label for="email">Email Address</label>
                    <input type="text" style="color:white" id="email" class="bg-black form-control" placeholder="@Model.Gmail" readonly value="@Model.Gmail" name="gmail">
                </div>
                <div class="col-md-6 pt-md-0 pt-3">
                    <label for="pass">Password</label>
                    <input type="password" id="pass" class="bg-light form-control" value="wefwerwerwerasdasd" name="newpassword" >
                </div>
            </div>





            <div class="py-3 pb-4 border-bottom">
                <button class="btn btn-primary mr-3" type="submit">update new settings</button>
                <a  class="btn btn-success"  href="/Users/Dashboard" > Back </a>
            </div>

        </div>
    </div>
</form>


@section Styles{
    
     <link rel="stylesheet"  href="~/Content/Settings.css"/>
    
    }  