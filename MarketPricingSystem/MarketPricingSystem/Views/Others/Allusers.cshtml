@model  IEnumerable<MarketPricingSystem.ViewModel.Userdetails>
@{
    ViewBag.Title = "Allsupermarkets";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}


<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">All Users</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Others/Createuser">Dashboard</a></li>
            <li class="breadcrumb-item active">Tables</li>
        </ol>
        <div style="margin-bottom:10px">

            <a href="/Others/Createuser" class="btn btn-success" role="button">Create New User </a>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                All Users
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>phone number</th>
                            <th>Gmail</th>
                            <th>Password</th>
                            <th >Role</th>


                            <th></th>


                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>phone number</th>
                            <th>Gmail</th>
                            <th>Password</th>
                            <th >Role</th>


                            <th></th>

                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var user in Model)
                        {

                            <tr>
                                <td>@user.username</td>
                                <td>@user.userphonenumber</td>
                                <td>@user.usergmail</td>
                                <td> <input class="form-control" type="password" readonly style=" border:solid 0px; background-color:white" value="@user.userpassword"/> </td>
                                <td >@user.rolename </td>

                                <td >

                                    <a href="/Others/Updateuser/@user.userid" class="btn btn-primary" role="button">Update</a>

                                    

                                    <button type="button" class="btn btn-danger   js-delete" onclick="confirm(this)" uid-data="@user.userid">
                                        Delete
                                    </button>

                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>



@section scripts {

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirm(event) {
            var btn = event;
            let value = btn.getAttribute("uid-data");


            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url:"/Others/ConfirmDelete/"+value,
                        method: "get",
                        success: function () {
                            $(btn).closest('tr').fadeOut();
                        }
                    })



                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                }
            })
        }


    </script>

}