@model MarketPricingSystem.Models.Categories
@{
    ViewBag.Title = "Updatesupermarket";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}
<main>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Update Category</h3></div>
                    <div class="card-body">


                        <form method="post" action="/Category/Confirmupdate">

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="Categoryname" type="text"  name="Categoryname" />
                                        <label for="Categoryname">@Model.CategoryName </label>
                                    </div>
                                </div>
                                </div>
                              

                            <input type="hidden" value="@Model.CategoryId" name="Categoryid" />

                            <div class="mt-4 mb-0">
                                <div class="d-grid"> <button type="submit" class="btn btn-primary"> Update</button> </div>
                            </div>
                        </form>



                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</main>