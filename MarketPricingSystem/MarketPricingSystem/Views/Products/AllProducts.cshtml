@model IEnumerable<MarketPricingSystem.ViewModel.product>
@{
    ViewBag.Title = "Allsupermarkets";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}


<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Products</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Users/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Tables</li>
        </ol>
        <div style="margin-bottom:10px">
         
            <a href="/Products/Createproduct" class="btn btn-success" role="button">Add New product </a>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                All Products
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Bar code</th>
                            <th>Product Description</th>
                            <th>Category</th>
                            <th></th>
                          

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Product Name</th>
                            <th>Bar code</th>
                            <th>Product Description</th>
                            <th>Category</th>
                            <th></th>


                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var market in Model)
                        {

                            <tr>
                                <td>@market.productname</td>
                                <td>@market.productBarcode</td>
                                <td>@market.productDescription</td>
                                <td>@market.productcategory</td>
                             

                                <td>
                                    <a href="/Products/Updateproduct/@market.productid" class="btn btn-primary" role="button">Update</a>
                                    <a href="/Products/Deleteproduct/@market.productid" class="btn btn-danger" role="button">Delete</a>
                                    


                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>