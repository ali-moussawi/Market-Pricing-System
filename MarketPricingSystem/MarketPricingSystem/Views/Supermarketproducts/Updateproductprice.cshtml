@model MarketPricingSystem.Models.Productprices
@{
    ViewBag.Title = "Updatesupermarket";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}
<main class="English">
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Update product price: </h3></div>
                    <div class="card-body">


                        <form method="post" action="/Supermarketproducts/Confirmupdate">

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="productprice" type="text" name="price" value="@Model.Price" required />
                                        <label for="Productprice">New Price </label>
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" value="@Model.ProductId" name="productid" />
                            <input type="hidden" value="@Model.Supermarketid" name="marketid" />

                            <div class="mt-4 mb-0">
                                <div class="d-grid"> <button type="submit" class="btn btn-primary"> Update</button> </div>
                            </div>
                        </form>



                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</main>


