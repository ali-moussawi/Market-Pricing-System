@model  MarketPricingSystem.ViewModel.roleandpermissionsandcheckedone


@{
    ViewBag.Title = "Createsupermarket";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}


<main>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Update Role</h3></div>
                    <div class="card-body">


                        <form method="post" action="/Roles/Confirmupdate">

                            <input type="hidden" value="@Model.role.RoleId" name="roleid"/>
                            <h6 style="color:red;opacity:0.5">@TempData["Message1"]</h6>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="Rolename" type="text" name="Rolename" value="@Model.role.RoleName" required />
                                        <label for="Rolename"> Role Name</label>
                                    </div>
                                </div>

                            </div>



                           

                            <div class="row mb-3">


                                @foreach (var permission in Model.permissions)
                                {
                                    var flag = true;
                                    <div class="col-md-6">

                                        @foreach (var checkedperm in Model.checkedpermissionsid)
                                        {



                                            if (permission.PermissionId == checkedperm.PermissionId)
                                            {
                                                <input style=" cursor: pointer;" class="form-check-input" type="checkbox" id="@permission.PermissionName" name="@permission.PermissionName" checked value="@permission.PermissionId">

                                                <label style=" cursor: pointer;" for="@permission.PermissionName"> @permission.PermissionName</label><br>

                                                flag = false;

                                            }


                                        }

                                        @if (flag == true)
                                        {
                                            <input style=" cursor: pointer;" class="form-check-input" type="checkbox" id="@permission.PermissionName" name="@permission.PermissionName" value="@permission.PermissionId">

                                            <label style=" cursor: pointer;" for="@permission.PermissionName"> @permission.PermissionName</label><br>

                                        }



                                    </div>


                                }







                            </div>

                            <div class="mt-4 mb-0">
                                <div class="d-grid"> <button type="submit" class="btn btn-primary"> update</button> </div>
                            </div>
                        </form>



                    </div>

                </div>
            </div>
        </div>
    </div>
</main>